# Server Configuration
HOST=0.0.0.0
PORT=8801

# LLM Configuration
LLM_PROVIDER=qwen
# Options: "qwen" for Qwen API, "ollama" for local Ollama

# Qwen API Configuration (if using LLM_PROVIDER=qwen)
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen3-vl-32b-instruct

# Ollama Configuration (if using LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-vl-32b-instruct

# Whisper Configuration
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large

# Video Processing Configuration
TARGET_CHAPTER_DURATION=600
# Target chapter duration in seconds (600 = 10 minutes)

MIN_CHAPTER_DURATION=300
# Minimum chapter duration in seconds (300 = 5 minutes)

MAX_CHAPTER_DURATION=900
# Maximum chapter duration in seconds (900 = 15 minutes)

# Storage Configuration
DATA_PATH=./data
UPLOAD_PATH=./data/uploads
PROCESSED_PATH=./data/processed
TEMP_PATH=./data/temp
